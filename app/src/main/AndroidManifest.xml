<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="richard.ztesoft.com.recyclerviewtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecyclerViewSwipeRefreshLayoutActivity" />
        <activity android:name=".RecyclerViewNSRefreshAndMoreActivity" />
        <activity android:name=".RecyclerViewGridLayoutActivity" />
        <activity android:name=".RecyclerViewCardViewActivity" />
        <activity android:name=".HorizontalRecyclerActivity"></activity>
    </application>

</manifest>